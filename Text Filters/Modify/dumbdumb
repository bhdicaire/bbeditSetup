#!/usr/bin/ruby

ARGF.set_encoding(Encoding::UTF_8)
x = ARGF.read

double_quotes = /\“|\”/
single_quotes = /\‘|\’/
em_dashes     = /—/
elipsis       = /…/

x = x.gsub(/#{double_quotes}/, '"')
x = x.gsub(/#{single_quotes}/, "'")
x = x.gsub(/#{em_dashes}/, "--")
x = x.gsub(/#{elipsis}/, "...")

print x
