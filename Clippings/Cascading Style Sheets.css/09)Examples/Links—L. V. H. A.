/* LINKS L.V.H.A. */a:link,a:visited,a:active,a:link:hover,a:visited:hover {	background-color : inherit;}a:link,a:visited,a:active {	color : inherit;}a:link { /* Unvisited links */	border-bottom : .05em solid blue;	padding-bottom : .005em;	text-decoration : none;	transition : all .25s ease}a:visited { /* Visited links */	border-color : purple}a:link:hover {	color : blue}a:visited:hover {	color : purple}a:active { /* As a link is activated. Moves the text down as though a button were depressed */	position : relative;	top : .1em}